{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Vibe Kanban",
  "version": "0.0.48",
  "identifier": "com.vibekanban.desktop",
  "build": {
    "beforeBuildCommand": "npm run frontend:build",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3004",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vibe Kanban",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": false,
        "shadow": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "Kanban board for development tasks",
    "longDescription": "A powerful kanban board application for managing development tasks and projects"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}