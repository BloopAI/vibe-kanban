{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Codex",
  "type": "object",
  "properties": {
    "additional_params": {
      "title": "Additional Parameters",
      "description": "Additional parameters to append to the base command",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "append_prompt": {
      "$ref": "#/$defs/AppendPrompt"
    },
    "base_command_override": {
      "title": "Base Command Override",
      "description": "Override the base command with a custom command",
      "type": [
        "string",
        "null"
      ]
    },
    "model": {
      "type": [
        "string",
        "null"
      ]
    },
    "oss": {
      "type": [
        "boolean",
        "null"
      ]
    },
    "sandbox": {
      "anyOf": [
        {
          "$ref": "#/$defs/SandboxMode"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "append_prompt"
  ],
  "$defs": {
    "AppendPrompt": {
      "title": "Append Prompt",
      "description": "Extra text appended to the prompt",
      "type": [
        "string",
        "null"
      ]
    },
    "SandboxMode": {
      "description": "Sandbox policy modes for Codex",
      "type": "string",
      "enum": [
        "read-only",
        "workspace-write",
        "danger-full-access"
      ]
    }
  }
}